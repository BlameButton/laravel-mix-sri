{
  "compilerOptions": {
    "types": ["laravel-mix"],
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2018",
    "lib": [
      "es6",
      "esnext",
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ]
}
